<skin>

    <!-- com.alee.laf.radiobutton.WebRadioButton -->

    <!-- Tristate checkbox -->
    <style type="radiobutton">
        <component>
            <foreground>255,255,255,240</foreground>
        </component>
        <painter class="com.alee.managers.style.skin.web.WebRadioButtonPainter">
            <selectedForeground>255,255,255,240</selectedForeground>

            <!-- Radio state painter -->
            <checkStatePainter class="com.alee.managers.style.skin.web.WebCheckStatePainter">
                <decorations>
                    <checkDecoration size="17,17">
                        <WebShape round="7" />
                        <WebShadow type="outer" width="2" />
                        <LineBorder color="10,10,10" />
                        <GradientBackground type="radial" from="0.5,0.5" to="2,0.5">
                            <color>77,81,83</color>
                            <color>black</color>
                        </GradientBackground>
                    </checkDecoration>
                    <checkDecoration states="selected">
                        <RadioIcon leftColor="255,255,255,225" rightColor="255,255,255,235" />
                    </checkDecoration>
                    <checkDecoration states="focused">
                        <LineBorder color="black" />
                    </checkDecoration>
                    <checkDecoration states="disabled">
                        <WebShadow type="outer" opacity="0" />
                        <LineBorder color="68,72,74" />
                        <GradientBackground type="radial" from="0.5,0.5" to="2,0.5">
                            <color>111,115,117</color>
                            <color>77,81,83</color>
                        </GradientBackground>
                    </checkDecoration>
                    <checkDecoration states="disabled,selected">
                        <RadioIcon leftColor="120,120,120" rightColor="130,130,130" />
                    </checkDecoration>
                </decorations>
            </checkStatePainter>

        </painter>
    </style>

</skin>